{% extends("EnfiCienciasDoAmbienteCommonEntitiesBundle::base.html.twig") %}

{% block content -%}
    <h1>Lista de Pontos de Coleta</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Endereço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.idFixo }}</td>
                <td>{{ entity.nome }}</td>
                <td>{{ entity.endereco }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('manage_pontodecoleta_show', { 'id': entity.id }) }}">exibir</a>
                    </li>
                    <li>
                        <a href="{{ path('manage_pontodecoleta_edit', { 'id': entity.id }) }}">alterar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('manage_pontodecoleta_new') }}" class="btn btn-primary">Inserir novo registro</a>
    {% endblock %}
