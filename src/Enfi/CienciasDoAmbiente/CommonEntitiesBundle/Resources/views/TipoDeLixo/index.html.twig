{% extends("EnfiCienciasDoAmbienteCommonEntitiesBundle::base.html.twig") %}

{% block content -%}
    <h1>Lista de Tipos de Lixo</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('manage_tipodelixo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nome }}</td>
                <td>{{ entity.descricao }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('manage_tipodelixo_show', { 'id': entity.id }) }}">exibir</a>
                    </li>
                    <li>
                        <a href="{{ path('manage_tipodelixo_edit', { 'id': entity.id }) }}">alterar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('manage_tipodelixo_new') }}" class="btn btn-primary">
        Inserir novo registro
    </a>
    {% endblock %}
