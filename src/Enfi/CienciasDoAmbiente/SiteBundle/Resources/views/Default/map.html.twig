{% extends("EnfiCienciasDoAmbienteSiteBundle::base.html.twig") %}


{% block head %}

    <style type="text/css">
      #map-canvas { width: 100%; height: 500px }
    </style>

    <script type="text/javascript"
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB6lKObk5KuFvWH32gmRLvApsUbkRGVZAU">
    </script>

    <script type="text/javascript">
    var customIcons = {
      restaurant: {
        url: 'http://www.beatthetraffic.com/img/trash_icon_solo_rectangular.png',
        //size: new google.maps.Size(36, 60),
        origin: new google.maps.Point(0, 0),
        anchor: new google.maps.Point(17, 34),
        scaledSize: new google.maps.Size(24, 40)
      },
      bar: {
        url: 'http://www.minininha_maluka.blogger.com.br/celjuu.gif',
        //size: new google.maps.Size(36, 60),
        origin: new google.maps.Point(0, 0),
        anchor: new google.maps.Point(17, 34),
        scaledSize: new google.maps.Size(24, 40)
      }
    };

    function initialize() {
      var map = new google.maps.Map(document.getElementById("map-canvas"), {
        center: new google.maps.LatLng(-21.984, -47.881),
        zoom: 15,
        mapTypeId: 'roadmap'
      });
      var infoWindow = new google.maps.InfoWindow;

      geocoder = new google.maps.Geocoder();
      geocoder.geocode(
        {
            'address': '{{ encontrarPontoDeColeta.endereco }}, Brasil',
        },
        function(results, status) {
          if (status == google.maps.GeocoderStatus.OK) {
            map.setCenter(results[0].geometry.location);
            var marker = new google.maps.Marker({
                map: map,
                position: results[0].geometry.location
            });
          }
      });

      // Recupera lista de pontos de coleta
      jQuery.getJSON(
        '{{ path('api.pontos_de_coleta') }}',
        null,
        function(data, textStatus) {
            var markers = data;
            for (var i = 0; i < markers.length; i++) {
              var point = new google.maps.LatLng(
                  parseFloat(markers[i].lat),
                  parseFloat(markers[i].long)
              )
              var html = "<b>" + markers[i].name + "</b> <br/>" + markers[i].address;
              var marker = new google.maps.Marker({
                map: map,
                position: point,
                icon: 'http://mt.google.com/vt/icon/psize=16&font=fonts/arialuni_t.ttf&color=ff330000&name=icons/spotlight/spotlight-waypoint-a.png&ax=44&ay=48&scale=1&text=' + (i+1)
              });
              bindInfoWindow(marker, map, infoWindow, html);
            }
        }
      );

    }
    google.maps.event.addDomListener(window, 'load', initialize);

    function bindInfoWindow(marker, map, infoWindow, html) {
      google.maps.event.addListener(marker, 'click', function() {
        infoWindow.setContent(html);
        infoWindow.open(map, marker);
      });
    }

    function doNothing() {}

    </script>

{% endblock head %}

{% block content %}

    <div id="map-canvas"></div>

{% endblock content %} 
